{
  "extends": "solhint:recommended",
  "plugins": [],
  "rules": {
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "no-global-import": "off",
    "contract-name-camelcase": "off",
    "func-visibility": ["warn", { "ignoreConstructors": true }],
    "compiler-version": ["error", "^0.8.18"],
    "reason-string": "off",
    "custom-errors": "off"
  }
}
